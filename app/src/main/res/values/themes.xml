<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InfoMovie" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_900</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ContainerTheme" parent="Theme.InfoMovie">
        <item name="background">@color/blue_900</item>
    </style>

    <style name="TitleText" parent="Theme.InfoMovie">
        <item name="android:textColor">@color/blue_900</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="maxLines">2</item>
    </style>

    <style name="HeaderText" parent="Theme.InfoMovie">
        <item name="android:textColor">@color/teal_700</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="PlotText" parent="Theme.InfoMovie">
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="SubTitle1" parent="Theme.InfoMovie">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Toolbar" parent="Theme.InfoMovie">
        <item name="android:background">@color/blue_900</item>
        <item name="android:textColor">@color/blue_900</item>
    </style>

    <style name="CollapsibleToolbar" parent="Theme.InfoMovie">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/blue_900</item>
    </style>

    <style name="FloatingButton" parent="Theme.InfoMovie">
        <item name="android:backgroundTint">@color/blue_900</item>
    </style>

    <style name="Theme.InfoMovie.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.InfoMovie.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.InfoMovie.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>